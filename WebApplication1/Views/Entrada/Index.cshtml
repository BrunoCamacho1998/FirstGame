    <link rel="stylesheet" href="~/Content/cs1.css" />
    <script>
        function move() {
            var elem = document.getElementById("pb");
            var width = 1;
            var id = setInterval(frame, 110);
            document.getElementById('bar').style.display = '';
            document.getElementById('btn-jg').style.display = 'none';

            function frame() {
                if (width == 101) {
                    window.location.href = "/SubMeny/Index";
                }

                if (width > 100) {
                    clearInterval(id);
                } else {
                    width = width + 4;
                    elem.style.width = width + '%';
                }



            }
        }
    </script>
</head>

<body style="background-image:url('/Content/Red_happy.gif'); background-color:#ffffff" onload=" document.getElementById('bar').style.display = 'none'; document.getElementById('navbar').style.display = 'none';">
   
