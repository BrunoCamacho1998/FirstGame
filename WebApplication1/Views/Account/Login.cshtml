@using WebApplication1.Models
@model LoginViewModel

<head>
    <script>
        function move() {
            var elem = document.getElementById("id01");
            var width = 100;
            var id = setInterval(frame, 30);
            elem.style.display = "";

            function frame() {
                if (width == 0) {
                    document.getElementById("letra").innerHTML = "Bien :'v"
                }
                if (width < 1) {
                    clearInterval(id);
                } else {
                    width = width - 4;

                    elem.style.marginLeft = width + "%";
                }
            }
        }
    </script>
    <script>
        
        function move1() {
            var elem = document.getElementById("id01");
            var width = 0;
            var id = setInterval(frame, 30);
            elem.style.display = "";

            function frame() {
                if (width == 100) {
                    elem.style.display = "none";
                }
                if (width > 100) {
                    clearInterval(id);
                } else {
                    width = width + 4;

                    elem.style.marginLeft = width + "%";

                }


            }
        }
    </script>
</head>
